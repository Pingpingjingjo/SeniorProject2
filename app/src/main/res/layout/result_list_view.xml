<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                                android:layout_margin="8dp">

    <LinearLayout android:layout_width="381dp"
                  android:layout_height="126dp"
                  android:orientation="vertical"
                  android:layout_marginTop="33dp"
                  android:layout_marginStart="8dp"
                  android:layout_alignParentTop="true">


        <TextView
                android:layout_margin="4dp"
                android:id="@+id/result_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:textSize="20dp"
                android:textColor="#1A1818"

                android:fontFamily="@font/fontstyle"
                android:textStyle="normal"


        />

        <TextView
                android:layout_margin="4dp"
                android:id="@+id/result_percent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:textSize="20dp"
                android:textColor="#1A1818"

                android:fontFamily="@font/fontstyle"
                android:textStyle="normal"/>
        <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/progressBarHorizontal" android:progressTint="#304FFE"/>
        <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textViewHorizontalProgress"/>
    </LinearLayout>


</android.widget.RelativeLayout>