<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="#FFFFFF"
        android:textColor="#000000">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="363dp"
            android:layout_height="483dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.666"
            app:layout_constraintVertical_bias="0.228">
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="221dp" app:srcCompat="@drawable/logo2"
                android:id="@+id/imageView7" android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:gravity="center"
                android:visibility="visible"/>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="72dp">
            <ImageView
                    android:layout_width="58dp"
                    android:layout_height="52dp"
                    app:srcCompat="@drawable/person"
                    android:id="@+id/imageView13"
                    android:layout_weight="1"


            />
            <EditText
                    android:layout_width="289dp"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/UnameTxt"
                    android:hint="ชื่อผู้ใช้"
                    android:textColor="#000000"
                    android:gravity="left"
                    android:layout_marginRight="15dp"


            />
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="72dp">
            <ImageView
                    android:layout_width="52dp"
                    android:layout_height="45dp"
                    app:srcCompat="@drawable/unlock"
                    android:id="@+id/imageView14"
                    android:layout_weight="1"
            />
            <EditText
                    android:layout_width="289dp"
                    android:layout_height="wrap_content"
                    android:inputType="numberPassword"
                    android:ems="10"
                    android:id="@+id/PwordTxt"
                    android:hint="รหัสผ่าน"
                    android:textColor="#000000"
                    android:gravity="left"
                    android:layout_marginRight="15dp"


            />
        </LinearLayout>
        <TextView
                android:text="ลงทะเบียน"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:id="@+id/textView2"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:textColor="#000000"
                android:layout_gravity="right"
                android:textSize="20dp"


        />
    </LinearLayout>
    <Button
            android:text="เข้าใช้"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/signinBnt"
            android:textColor="#ffffff"
            android:gravity="center"
            android:textSize="20dp"
            android:background="@drawable/btn_border"


            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginBottom="112dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.564"/>

</android.support.constraint.ConstraintLayout>