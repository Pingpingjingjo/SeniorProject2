<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".KnowledgeMain">

    <ImageView
            android:layout_width="134dp"
            android:layout_height="142dp" app:srcCompat="@mipmap/ic_launcher_round"
            android:id="@+id/imageView"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginBottom="432dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.498"/>
    <TextView
            android:text="ความรู้"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView4"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/imageView"/>
    <Button
            android:layout_width="186dp"
            android:layout_height="64dp" android:id="@+id/DBtn"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/SBtn" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.502" android:text="โรควิตกกังวล"/>
    <Button
            android:layout_width="177dp"
            android:layout_height="72dp" android:id="@+id/ABtn"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/DBtn" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.251"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:text="โรคติดโซลเชียล"/>
    <Button
            android:layout_width="187dp"
            android:layout_height="64dp" android:id="@+id/SBtn"
            android:layout_marginTop="52dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:text="โรคซึมเศร้า"/>

</android.support.constraint.ConstraintLayout>