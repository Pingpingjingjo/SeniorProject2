<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"

        tools:context=".Result">
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" app:srcCompat="@drawable/result1" android:id="@+id/imageView5"
            tools:layout_editor_absoluteX="41dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="324dp"
            android:layout_height="521dp" android:id="@+id/linearLayout"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView5" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:textColor="#000000"
            android:textSize="22dp"

    >
        <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/results"
                android:textColor="#000000"
                android:textSize="22dp"
        />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>