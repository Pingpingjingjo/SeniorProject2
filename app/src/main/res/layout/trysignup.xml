<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:background="@drawable/bg">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="140dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:background="@drawable/customborder"

    >

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
        >
            <TextView
                    android:text="ชื่อ"
                    android:layout_width="87dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView4"
                    android:layout_weight="1"

                    android:textColor="#181617"
                    android:fontFamily="@font/fontstyle"
                    android:textSize="20dp"
                    android:textStyle="normal"
            />
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/nameTxt" android:layout_weight="1" android:hint="ชื่อผู้ใช้"

                    android:textColor="#181617"
                    android:fontFamily="@font/fontstyle"
                    android:textSize="20dp"
                    android:textStyle="normal"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:text="อายุ"
                    android:layout_width="20dp"
                    android:layout_height="45dp" android:id="@+id/textView6" android:layout_weight="1"

                    android:textColor="#181617"
                    android:fontFamily="@font/fontstyle"
                    android:textSize="20dp"
                    android:textStyle="normal"/>
            <EditText
                    android:layout_width="42dp"
                    android:layout_height="wrap_content"
                    android:inputType="numberSigned"
                    android:ems="10"
                    android:id="@+id/AgeTxt" android:layout_weight="1"

                    android:textColor="#181617"
                    android:fontFamily="@font/fontstyle"
                    android:textSize="20dp"
                    android:textStyle="normal"/>
            <TextView
                    android:text="เพศ"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView7" android:layout_weight="1"
                    android:textColor="#181617"
                    android:fontFamily="@font/fontstyle"
                    android:textSize="20dp"
                    android:textStyle="normal"/>
            <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/spinner" android:layout_weight="1"
                    android:textColor="#181617"
                    android:fontFamily="@font/fontstyle"
                    android:textSize="20dp"
                    android:textStyle="normal"/>
        </LinearLayout>
        <Space
                android:layout_width="309dp"
                android:layout_height="10dp"/>
        <TextView
                android:text="รหัสผ่าน"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView14"
                android:textColor="#181617"
                android:fontFamily="@font/fontstyle"
                android:textSize="20dp"
                android:textStyle="normal"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/passtxt1"
                android:textColor="#181617"/>
        <Space
                android:layout_width="match_parent"
                android:layout_height="31dp"/>
        <TextView
                android:text="ยืนยันรหัสผ่าน"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView15"
                android:textColor="#181617"
                android:fontFamily="@font/fontstyle"
                android:textSize="20dp"
                android:textStyle="normal"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/passTxt2"
                android:textColor="#181617"
        />
        <Space
                android:layout_width="315dp"
                android:layout_height="45dp"/>
        <Button
                android:text="ตกลง"
                android:layout_width="175dp"
                android:layout_height="38dp"
                android:id="@+id/acceptBtn"

                android:textSize="20dp"
                android:textStyle="normal"
                android:fontFamily="@font/fontstyle"
                android:background="@drawable/button2"
                android:textColor="#181617"
                android:layout_gravity="center"
                android:gravity="center"


                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:backgroundTint="#A4039BE5"/>
        <Space
                android:layout_width="313dp"
                android:layout_height="18dp"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>