<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Home"

        android:backgroundTint="#F9F9F9">

    <ImageButton

            android:layout_width="322dp"
            android:layout_height="103dp"
            app:srcCompat="@drawable/test"
            android:id="@+id/testBtn"
            android:scaleType="centerCrop"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:foregroundTint="#CECFCF"
            android:soundEffectsEnabled="true"
            android:backgroundTint="#F9F9F9" android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView3" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.424"/>


    />
    <ImageButton
            android:layout_width="323dp"
            android:layout_height="107dp"
            app:srcCompat="@drawable/know"

            android:id="@+id/knowledgeBtn"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"

            android:scaleType="centerCrop"

            android:backgroundTint="#F9F9F9" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/historyBtn"
            android:layout_marginTop="8dp"/>
    <ImageButton

            app:srcCompat="@drawable/history"
            android:id="@+id/historyBtn"


            android:layout_width="314dp"
            android:layout_height="102dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"

            android:scaleType="centerCrop"

            android:backgroundTint="#F9F9F9"


            app:layout_constraintTop_toBottomOf="@+id/testBtn"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.482"/>
    <ImageView
            android:layout_width="388dp"
            android:layout_height="166dp" app:srcCompat="@drawable/logo"
            android:id="@+id/imageView3"
            android:scaleType="centerInside"
            android:layout_marginTop="60dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="1.0"/>
    />


</android.support.constraint.ConstraintLayout>