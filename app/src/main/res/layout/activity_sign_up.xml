<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".signUp"
        android:background="@drawable/bg"
        android:scaleType="centerCrop"

>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="348dp"
            android:layout_height="525dp"
            android:textSize="25sp"
            android:id="@+id/linearLayout3"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_marginTop="30dp"

        >


            <TextView

                    android:text="ชื่อ"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView5"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:textSize="20dp"
                    android:textColor="#000"
            />
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/nameTxt"
                    android:layout_weight="1"
                    android:hint="Name"
                    android:textSize="20dp"
                    android:textColor="#000"
            />
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="58dp">
            <TextView
                    android:text="อายุ"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView8"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:textSize="20dp"
                    android:textColor="#000"
            />
            <EditText
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:text=""
                    android:ems="10"
                    android:id="@+id/AgeTxt"
                    android:layout_weight="1"
                    android:textSize="20dp"
                    android:textColor="#000"
            />
            <TextView
                    android:text="เพศ"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView9"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:textSize="20dp"
                    android:textColor="#000"
            />
            <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/spinner" android:layout_weight="1"
                    android:textSize="20dp"
                    android:textColor="#000"/>
        </LinearLayout>
        <TextView
                android:text="รหัสผ่าน"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView10"
                android:layout_marginTop="10dp"
                android:textSize="20dp"
                android:textColor="#000"

        />
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberPassword"
                android:ems="10"
                android:id="@+id/passtxt1"
                android:textSize="25dp"
                android:textColor="#000"/>
        <TextView
                android:text="ยืนยันรหัสผ่าน"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView11"
                android:textSize="20dp"
                android:textColor="#000"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberPassword"
                android:ems="10"
                android:id="@+id/passTxt2"
                android:textSize="25dp"
                android:textColor="#000"/>


        <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/trylist"/>

    </LinearLayout>
    <Button
            android:text="ยอมรับ"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:textSize="20dp"
            android:id="@+id/acceptBtn"
            android:background="@drawable/btn_border"
            android:textColor="#FFFFFF"


            android:layout_marginBottom="56dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.497"/>

</android.support.constraint.ConstraintLayout>


