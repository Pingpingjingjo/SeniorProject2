<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".knowledge2" android:backgroundTint="#adcbe3">

    <ScrollView
            android:layout_width="367dp"
            android:layout_height="565dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.666">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="343dp"
                android:layout_height="708dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent">
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView11"/>

            <TextView
                    android:text="โรคซึมเศร้า"
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:gravity="center"
                    android:id="@+id/uppertext"
            />
            <VideoView
                    android:layout_width="match_parent"
                    android:layout_height="252dp" android:id="@+id/video"
                    android:gravity="center"
            />
            <Button
                    android:text="Play"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/play" android:backgroundTint="#a6d1e8"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="63dp">
                <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" app:srcCompat="@android:drawable/ic_media_previous"
                        android:id="@+id/prev" android:layout_weight="1" android:backgroundTint="#4692bc"/>
                <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" app:srcCompat="@android:drawable/ic_media_next"
                        android:id="@+id/next" android:layout_weight="1" android:backgroundTint="#4692bc"/>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>