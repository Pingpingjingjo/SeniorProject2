<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".TestTry"
        android:background="#ffffff"


>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="379dp"
            android:layout_height="543dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.666" app:layout_constraintVertical_bias="0.034"
            android:id="@+id/linearLayout2">
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="102dp" app:srcCompat="@drawable/testh"
                android:id="@+id/imageView4"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="165dp" android:id="@+id/testTxt"
                android:textSize="20sp"
                android:text="คำแนะนำ: ตอบคำถามแบบทดสอบจากความเป็นจริงเพื่อความถูกต้องแม่นยำในการประเมิณ 	ระยะเวลาการประเมิณคือ 2 สัปดาห์ที่ผ่านมา หากพร้อมแล้วให้กดปุ่มถัดไป"
                android:gravity="center"
                android:textColor="#000000"

        />

        <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="298dp"
                android:layout_weight="1" android:id="@+id/radio_group">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight="1">
                <RadioButton
                        android:layout_width="46dp"
                        android:layout_height="44dp"
                        android:id="@+id/radioButton1"
                        android:layout_weight="1"
                        android:gravity="center"

                />
                <TextView
                        android:id="@+id/Ctxt1"
                        android:layout_width="330dp"
                        android:layout_height="47dp"
                        android:gravity="center"
                        android:layout_gravity="right"
                        android:textColor="#000000"


                />
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight="1">
                <RadioButton
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:id="@+id/radioButton2"
                        android:layout_weight="1"
                        android:gravity="center"

                />
                <TextView
                        android:id="@+id/Ctxt2"
                        android:layout_width="330dp"
                        android:layout_height="47dp"
                        android:gravity="center"
                        android:layout_gravity="right"
                        android:textColor="#000000"

                />
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight="1">
                <RadioButton
                        android:layout_width="42dp"
                        android:layout_height="43dp"
                        android:id="@+id/radioButton3"
                        android:layout_weight="1"
                        android:gravity="center"

                />
                <TextView
                        android:id="@+id/Ctxt3"
                        android:layout_width="330dp"
                        android:layout_height="47dp"
                        android:gravity="center"
                        android:layout_gravity="right"
                        android:textColor="#000000"

                />
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="274dp" android:layout_weight="1">
                <RadioButton
                        android:layout_width="42dp"
                        android:layout_height="43dp"
                        android:id="@+id/radioButton4"
                        android:layout_weight="1"
                        android:gravity="center"

                />
                <TextView
                        android:id="@+id/Ctxt4"
                        android:layout_width="330dp"
                        android:layout_height="47dp"
                        android:gravity="center"
                        android:layout_gravity="right"
                        android:textColor="#000000"

                />
            </LinearLayout>
        </RadioGroup>


    </LinearLayout>
    <Button
            android:text="กลับไป"
            android:layout_width="170dp"
            android:layout_height="45dp" android:id="@+id/preBtn" android:layout_weight="1"
            android:background="@drawable/btn_border"
            android:textSize="22dp"
            android:textColor="#ffffff"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/nextBtn" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginBottom="48dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.511"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
            app:layout_constraintVertical_bias="0.684"/>
    <Button
            android:text="ต่อไป"
            android:layout_width="170dp"
            android:layout_height="46dp"
            android:id="@+id/nextBtn"
            android:layout_weight="1"
            android:background="@drawable/btn_border"
            android:textSize="22dp"
            android:textColor="#ffffff"

            android:layout_marginEnd="28dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="48dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2" app:layout_constraintVertical_bias="0.833"/>

</android.support.constraint.ConstraintLayout>