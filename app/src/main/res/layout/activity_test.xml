<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Test"

>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="370dp"
            android:layout_height="682dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.666" app:layout_constraintVertical_bias="0.034">
        <TextView
                android:text="แบบสอบถาม"
                android:layout_width="349dp"
                android:layout_height="36dp" android:id="@+id/textView7"/>
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="96dp" app:srcCompat="@mipmap/ic_launcher_round"
                android:id="@+id/imageView4"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="165dp" android:id="@+id/testTxt"
                android:textSize="20sp"
                android:text="คำแนะนำ: ตอบคำถามแบบทดสอบจากความเป็นจริงเพื่อความถูกต้องแม่นยำในการประเมิณ 	ระยะเวลาการประเมิณคือ 2 สัปดาห์ที่ผ่านมา หากพร้อมแล้วให้กดปุ่มถัดไป"
                android:gravity="center"

        />

        <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="298dp"
                android:layout_weight="1" android:id="@+id/radio_group">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight="1">
                <RadioButton
                        android:layout_width="46dp"
                        android:layout_height="44dp"
                        android:id="@+id/radioButton1"
                        android:layout_weight="1"
                        android:gravity="center"

                />
                <TextView
                        android:id="@+id/Ctxt1"
                        android:layout_width="330dp"
                        android:layout_height="47dp"
                        android:gravity="center"
                        android:layout_gravity="right"

                />
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight="1">
                <RadioButton
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:id="@+id/radioButton2"
                        android:layout_weight="1"
                        android:gravity="center"

                />
                <TextView
                        android:id="@+id/Ctxt2"
                        android:layout_width="330dp"
                        android:layout_height="47dp"
                        android:gravity="center"
                        android:layout_gravity="right"
                />
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight="1">
                <RadioButton
                        android:layout_width="42dp"
                        android:layout_height="43dp"
                        android:id="@+id/radioButton3"
                        android:layout_weight="1"
                        android:gravity="center"

                />
                <TextView
                        android:id="@+id/Ctxt3"
                        android:layout_width="330dp"
                        android:layout_height="47dp"
                        android:gravity="center"
                        android:layout_gravity="right"
                />
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="274dp" android:layout_weight="1">
                <RadioButton
                        android:layout_width="42dp"
                        android:layout_height="43dp"
                        android:id="@+id/radioButton4"
                        android:layout_weight="1"
                        android:gravity="center"

                />
                <TextView
                        android:id="@+id/Ctxt4"
                        android:layout_width="330dp"
                        android:layout_height="47dp"
                        android:gravity="center"
                        android:layout_gravity="right"
                />
            </LinearLayout>
        </RadioGroup>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="380dp"
                android:layout_height="138dp"
        >
            <Button
                    android:text="กลับไป"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/preBtn" android:layout_weight="1"/>
            <Button
                    android:text="ต่อไป"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/nextBtn" android:layout_weight="1"/>
        </LinearLayout>


    </LinearLayout>

</android.support.constraint.ConstraintLayout>